<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hserban.lecture8_samplecode.MainActivity">

<!--    <Button-->
<!--        android:id="@+id/cameraButton"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_margin="10dp"-->
<!--        android:onClick="cameraPage"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Camera" />-->

    <Button
        android:id="@+id/sqlButton"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:onClick="sqlPage"
        android:text="SQL" />

    <Button
        android:id="@+id/diceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="dicePage"
        android:layout_gravity="center"
        android:text="Dice (Sensors)" />

    <RadioGroup
        android:id="@+id/radioGroupColors"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3">

        <RadioButton
            android:id="@+id/radioRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Red"
            android:textColor="#ff0000"
            android:onClick="saveData"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textColor="#0000ff"
            android:onClick="saveData"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"
            android:textColor="#00ff00"
            android:onClick="saveData"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioBrown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brown"
            android:textColor="#a52a2a"
            android:onClick="saveData"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:textColor="#ffff00"
            android:onClick="saveData"
            android:textSize="20sp" />
    </RadioGroup>

</LinearLayout>
